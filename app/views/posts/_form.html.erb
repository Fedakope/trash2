
<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :character, :collection => Character.all, :label_method => :firstname, :value_method => :id %>
    <%= f.input :title %>
    <%= f.input :episode, collection: (1..6).to_a, label: "Durant quel Ã©pisode ?"  %>
    <%= f.association :user, :collection => User.all, :label_method => :firstname, :value_method => :id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
